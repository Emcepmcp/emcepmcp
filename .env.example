# Solana Configuration
RPC_ENDPOINT=https://api.mainnet-beta.solana.com  # Your Solana RPC endpoint (QuickNode, Alchemy, etc.)
WALLET_PRIVATE_KEY=your_wallet_private_key         # Private key of the wallet that will sign transactions

# MCP (Machine Control Protocol) Configuration
MCP_ENDPOINT=https://api.openai.com/v1             # OpenAI API endpoint
MCP_API_KEY=your_openai_api_key                   # Your OpenAI API key
MCP_MODEL=gpt-4o-mini                             # Model to use for analysis (gpt-4, gpt-3.5-turbo)

# Memo Program Configuration
MEMO_PROGRAM_ID=your_memo_program_id              # The deployed memo program ID on Solana

# Server Configuration
PORT=3000                                         # Port for the Express server
NODE_ENV=development                              # Environment (development/production)

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000                       # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100                       # Maximum requests per window

# Optional: Logging
LOG_LEVEL=info                                    # Log level (error, warn, info, debug)
LOG_FILE_PATH=./logs/app.log                      # Path to log file